<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/schedule_lesson_line_margin">

    <TextView
        android:id="@+id/schedule_lesson_time"
        tools:text="Time"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:layout_width="0dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray" />

    <TextView
        android:id="@+id/schedule_lesson_type"
        tools:text="Type"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/schedule_lesson_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Subject" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/schedule_lesson_desc_subject"
            tools:text="Desc"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray" />

    <TextView
        android:id="@+id/schedule_lesson_place"
        tools:text="Place"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:layout_width="0dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorGray" />

    <ImageView
        android:id="@+id/schedule_lesson_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

</LinearLayout>
